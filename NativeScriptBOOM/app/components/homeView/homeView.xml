<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>
    <StackLayout>
        <StackLayout id="buttons">
		<Button text="SPIN" tap="fade" class="animation-btn cool1" />

		<Button text="DASH" tap="dash" class="animation-btn cool2" />

		<Button text="ROLL" tap="roll" class="animation-btn cool3" />

		<Button text="WORM" tap="worm" class="animation-btn cool4" />     
        </StackLayout>
	<StackLayout>
		<Label cssClass="title" tap="bigBang" text="Progres Fair" />
		<Button tap="bigBang" text="Android BOOOM!!!" />
		<Button text="BRING THEM BACK" id="show-all"
			class="show-all" tap="showAll" />
	</StackLayout>
  </StackLayout>

</Page>